<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>org.sonatype.mavenbook.plugins</groupId>
    <artifactId>lint-trap</artifactId>
    <packaging>maven-plugin</packaging>
    <version>1.0.0-SNAPSHOT</version>
    <name>lint-runner Maven Mojo</name>

    <scm>
        <connection>scm:git:git@github.com:willowtreeapps/lint-trap.git</connection>
        <developerConnection>scm:git:git@github.com:willowtreeapps/lint-trap.git</developerConnection>
    </scm>


    <properties>
        <wta.repo.release>http://maven.willowtreeapps.com/repository/internal/</wta.repo.release>
        <wta.repo.snapshot>http://maven.willowtreeapps.com/repository/snapshots/</wta.repo.snapshot>
    </properties>

    <distributionManagement>
        <repository>
            <id>wta.internal</id>
            <name>WillowTree Internal Repository</name>
            <url>${wta.repo.release}</url>
        </repository>
        <snapshotRepository>
            <id>wta.snapshots</id>
            <name>WillowTree Snapshot Repository</name>
            <url>${wta.repo.snapshot}</url>
        </snapshotRepository>
    </distributionManagement>

    <dependencies>
        <dependency>
            <groupId>org.apache.maven</groupId>
            <artifactId>maven-plugin-api</artifactId>
            <version>3.0.4</version>
        </dependency>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>3.8.1</version>
            <scope>test</scope>
        </dependency>
    </dependencies>
</project>
